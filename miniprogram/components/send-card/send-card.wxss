page {
  background-color: #f1f1f1;
}

.send {
  padding: 20rpx;
  background-color: #fff;
}

.send-title {
  display: flex;
  align-items: center;
}

.send-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.send-box {
  flex: 1;
}

.send-time {
  font-size: 24rpx;
  color: #939393;
}

.send-head {
  margin: 20rpx 0;
  font-size: 50rpx;
  font-weight: 550;
  line-height: 1.5;
  /* transform: translateX(-50%); */
  /* position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); */

}

.send-content {
  margin: 20rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.send-img {
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}

.send-img .img {
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.send-img .img:nth-child(3n) {
  margin-right: 0;
}

.send-nickName {
  font-size: 32rpx;
}
