.container {
  padding: 20rpx;
}

.head {
  padding: 20rpx;
  font-size: 60rpx;
  font-weight: 200;
  text-align: left;
  /* border-bottom: 1px dotted black; */
  border-bottom: 1px solid lightgray;
  width: 95%;
}
.head-input {
  height: 75rpx;
}
.content1 {
  display: block;
  margin-top: 20rpx;
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
  /* border: 1px dotted black; */
  /* border-bottom: 1px solid lightgray; */
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  background: #f1f1f1;
}

.words-num {
  flex: 1;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 30rpx;
}

.send-btn{
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
}


/* 图片样式 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.image {
  width: 100%;
  height: 100%;
}
.image-wrap {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
}
.selectphoto {
  border: 2rpx dashed #cbd1d7;
  position: relative;
}
.icon-jiahao {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #cbd1d7;
  font-size: 60rpx;
}

.del {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}

/* --------------------------- */
/* 导航 */
.nav {
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  overflow: hidden;
  margin-right: 30rpx;
  margin-left: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 50rpx;
  margin-top: 50rpx;
  box-sizing: border-box;
  display: block;
  width: 100%;
}

.nav-item {
  padding-right: 90rpx;
  position: relative;
  display: flex;
  padding: 0 30rpx;
  min-height: 100rpx;
  /* background-color: #fff; */
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.nclick {
  display: inline-block;
  width: 100%;
}
.content {
  font-size: 30rpx;
  line-height: 1.6em;
  flex: 1;
}

.img {
  display: inline-block;
  margin-right: 10rpx;
  width: 1.6em;
  height: 1.6em;
  vertical-align: middle;
  max-width: 100%;
}

.text {
  color: #808080;
}

.text1 {
  background: lightgray;
  display: inline-block;
  width: 200rpx;
  font-size: 35rpx;
  font-weight: 400;
  position: absolute;
  left: 50%;
}

.content .iconfont {
  color: #d43c33;
  font-weight: 600;
  margin-right: 30rpx;
}

.content .icon-xiangyou {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
  bottom: 0;
  color: #808080;
  font-size: 28rpx;
}
